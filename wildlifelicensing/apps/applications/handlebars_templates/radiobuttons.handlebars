<div class="mb-3">
    <label class="form-label">{{label}}</label>
    {{#each options}}
        <div class="form-check">
            <input class="form-check-input" name="{{../name}}" type="radio" id="{{../name}}_{{@index}}_preview" value="{{this.value}}" {{#if ../required}}required{{/if}} {{#isEqual this.value ../value }}checked{{/isEqual}}>
            <label class="form-check-label" for="{{../name}}_{{@index}}_preview">{{this.label}}</label>
        </div>
    {{/each}}
    {{#if help_text}}
        <div class="form-text">{{{help_text}}}</div>
    {{/if}}
</div>
