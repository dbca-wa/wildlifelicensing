<div class="mb-3">
    <label class="form-label">{{label}} </label>
    <textarea rows="3" name="{{name}}" class="form-control" {{#if required}}required{{/if}}>{{#if value}}{{value}}{{/if}}</textarea>
    {{#if help_text}}
        <div class="form-text">{{{help_text}}}</div>
    {{/if}}
    {{#if errors}}
        <div class="invalid-feedback d-block">{{errors}}</div>
    {{/if}}
 </div>
